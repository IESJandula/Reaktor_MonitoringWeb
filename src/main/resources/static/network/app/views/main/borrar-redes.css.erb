body {
    font-family: Arial, sans-serif;
}

h1, h2 {
    font-weight: bold;
}

#menu {
    background-color: #007bff;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    padding: 10px;
}

#menu a {
    color: #fff;
    text-decoration: none;
    padding: 10px;
}

#menu a:hover {
    background-color: #0056b3;
    color: #fff;
}